<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="form-card border shadow p-4 rounded">
        <div class="text-center mb-3">
            <img src="/images/logo.png" alt="Logo" class="logo mb-4" style="width: 130px;">
            <h2>Sign Up</h2>
            <p class="text-muted">Masukkan username dan password</p>
        </div>
        <form action="/signup" method="POST">
            <div class="mb-3">
                <input type="text" name="username" class="form-control" placeholder="Username" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100" style="background-color: #ff7f00; border-color: #ff7f00;">Sign Up</button>
        </form>
        <p class="mt-3 text-center">Sudah Punya Akun? <a href="/login">Login</a></p>
    </div>
</div>